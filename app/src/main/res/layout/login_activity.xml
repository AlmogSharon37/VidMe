<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-14dp"
                app:srcCompat="@drawable/logo" />

            <Button
                android:id="@+id/popUpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="configure server" />

            <TextView
                android:id="@+id/WelcomeBackText"
                android:layout_width="254dp"
                android:layout_height="115dp"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="0dp"
                android:text="Welcome Back"
                android:textColor="#EA6D35"
                android:textSize="42sp"
                android:textStyle="bold"
                tools:layout_marginRight="32dp" />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="32dp"
                android:drawableStart="@drawable/email"
                android:ems="10"
                android:hint="  Email"
                android:inputType="textEmailAddress"
                android:textColor="#756C6C"
                android:textColorHighlight="#756C6C" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="32dp"
                android:drawableStart="@drawable/password"
                android:ems="10"

                android:hint="  Password"
                android:inputType="textPassword"
                android:textColor="#756C6C"
                android:textColorHighlight="#756C6C" />

            <Button
                android:id="@+id/ForgotPassBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="32dp"
                android:background="@android:color/transparent"
                android:text="Forgot your password?"
                android:textAllCaps="false"
                android:textColor="#707070" />

            <ImageButton
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="0dp"
                android:background="@android:color/transparent"
                android:src="@drawable/btn_arraw1"
                android:textColor="#707070" />

            <TextView
                android:id="@+id/SignInOptionsText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Sign in using" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/FacebookBtn"
                    android:layout_width="430dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="50dp"
                    android:layout_weight="1"


                    android:background="@drawable/facebook_border"
                    android:backgroundTint="#3B608C"
                    android:drawableEnd="@drawable/facebook"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Facebook"
                    android:textAllCaps="false"
                    android:textColor="#3B608C" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/GoogleBtn"
                    style="@android:style/Widget.Button"
                    android:layout_width="430dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"

                    android:background="@drawable/facebook_border"
                    android:backgroundTint="#F93636"
                    android:drawableEnd="@drawable/google"
                    android:drawablePadding="16dp"
                    android:padding="8dp"
                    android:text="Google"
                    android:onClick="signInWithGoogle"
                    android:textColor="#F93636" />
            </LinearLayout>

            <Button
                android:id="@+id/RegisterBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="New user? Register"
                android:textAllCaps="false"
                android:textColor="#707070" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>